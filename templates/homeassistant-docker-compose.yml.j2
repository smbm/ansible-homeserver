version: '3.8'
services:
  homeassistant:
    container_name: homeassistant
    image: "homeassistant/home-assistant:latest"
    volumes:
      - ./homeassistant-data:/config
      - /etc/localtime:/etc/localtime:ro
    restart: unless-stopped
    network_mode: host
    #ports:
    #  - 8123:8123
    devices:
      - /dev/ttyAMA0:/dev/ttyAMA0
